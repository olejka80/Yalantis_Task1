<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar_title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Description_text_style">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">#0e0e0e</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Offer_text_style">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Hint_text_style">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">#838383</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Main_text_style">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">#0e0e0e</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_view</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="Width_height_wrap_cont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Width_height_match_parent_wrap_cont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Param_text_view_left" parent="Hint_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>

    </style>

    <style name="Param_text_view_right" parent="Description_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="RelativeLayout_param" parent="Width_height_match_parent_wrap_cont">
        <item name="android:paddingTop">@dimen/padding_vertical_layout</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_layout</item>
    </style>


</resources>
